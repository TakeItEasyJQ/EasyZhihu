<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_title"
    android:background="#46b2ff"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">
    <ImageView
        android:id="@+id/fragment_back"
        android:layout_alignParentLeft="true"

        android:layout_centerVertical="true"
        android:background="@drawable/fragment_back"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <TextView
        android:id="@+id/fragment_agreetxt"
        android:text="..."
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="#fff"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/fragment_agree"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/fragment_agreetxt"
        android:background="@drawable/fragment_agree"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <TextView
        android:id="@+id/fragment_messagetxt"
        android:text="..."
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/fragment_agree"
        android:textColor="#fff"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/fragment_message"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/fragment_messagetxt"
        android:background="@drawable/fragment_message"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <ImageView
        android:id="@+id/fragment_favor"
        android:layout_marginRight="25dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/fragment_message"
        android:background="@drawable/frgament_favor_bg1"
        android:layout_width="25dp"
        android:layout_height="25dp"/>

    <ImageView
        android:id="@+id/fragment_share"
        android:layout_marginRight="25dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/fragment_favor"
        android:background="@drawable/fragment_share"
        android:layout_width="28dp"
        android:layout_height="28dp" />





</RelativeLayout>